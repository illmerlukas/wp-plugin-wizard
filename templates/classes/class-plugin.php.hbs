<?php
/**
 * File for defining the core plugin class.
 *
 * @package     {{packageName pluginSlug}}
 */

namespace {{namespace pluginSlug}};

use {{namespace pluginSlug}}\Settings;
{{#if restEndpoints}}
use {{namespace pluginSlug}}\Rest;
{{/if}}
use {{namespace pluginSlug}}\Utils;

/**
 * Core plugin.
 */
class Plugin {

	/**
	 * The settings class.
	 *
	 * @access public
	 * @var    Settings  $settings  The settings class instance.
	 */
	public $settings;

    /**
	 * The utils class.
	 *
	 * @access public
	 * @var    Utils  $utils  The utils class instance.
	 */
	public $utils;

	{{#if restEndpoints}}
	/**
	 * The REST endpoints.
	 *
	 * @access public
	 * @var    Rest\Rest_Endpoints  $rest_endpoints  The REST endpoints class instance.
	 */
	public $rest_endpoints;
	{{/if}}

	/**
	 * Constructor.
	 */
	public function __construct() {
		$this->settings = new Settings();

		$this->define_hooks();
	}

	/**
	 * Define core plugin hooks.
	 *
	 * @access public
	 */
	public function define_hooks() {
		add_action( 'plugins_loaded', array( $this, 'init' ) );
	}

	/**
	 * Initialize the plugin.
	 *
	 * @access public
	 */
	public function init() {
		load_plugin_textdomain( '{{pluginSlug}}', false, {{constantCase pluginSlug}}_PLUGIN_BASEDIR . '/lang' );

		$this->utils = new Utils();
		{{#if restEndpoints}}
		$this->rest_endpoints = new Rest\Rest_Endpoints( $this->settings, $this->utils );
		{{/if}}
	}
}
